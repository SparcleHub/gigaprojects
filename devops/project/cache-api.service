[Unit]
Description=Cache API Service
After=network.target redis.service
Wants=redis.service

[Service]
Type=simple
User=cacheapi
Group=cacheapi
WorkingDirectory=/opt/cache-api
Environment=CONFIG_PATH=/etc/cache-api/config.yaml
ExecStart=/usr/bin/python3 /opt/cache-api/cache-api.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
